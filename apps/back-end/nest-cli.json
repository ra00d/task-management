{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "generateOptions": {
    "spec": false
  },
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      {
        "include": "../resources/**/*",
        "outDir": "dist/resources",
        "watchAssets": true
      },

      {
        "include": "i18n/**/*",
        "watchAssets": true
      }
    ]
  }
}
